<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiTestApp"
             xmlns:viewmodel="clr-namespace:MauiTestApp.ViewModels"
             xmlns:components="clr-namespace:MauiTestApp.Components"
             x:Class="MauiTestApp.Views.MainPage">

    <ContentPage.BindingContext>
        <viewmodel:MainPageViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <components:EnumConverter x:Key="enumConverter" />
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Label  x:Name="distanceLabel" Text="{components:CultureUpdateBinding SelectedDistance, Mode=TwoWay}"/>
            <Button Text="Reset" Command="{Binding ResetCommand}"/>
            <Button Text="Set" Command="{Binding SetCommand}"/>
            <Button Text="Set Manually" Clicked="Button_Clicked"/>

            <Label  Text="{Binding SelectedDistance, Mode=OneWay, Converter={StaticResource enumConverter}}"/>
 
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
